@model IEnumerable<CheeseMVC.Models.Menu>


<h1>Menu</h1>


<ul>

    @foreach(var menu in Model)
    { 
        <li>
            <a asp-controller="Menu"
               asp-action="ViewMenu"
               asp-route-id="@menu.ID">@menu.Name</a>
        </li>
    }


</ul>

<div>
    <a asp-controller="Menu" asp-action="Add">Add Menu</a>
</div>